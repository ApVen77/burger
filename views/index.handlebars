
<div class="container">
    
<img class= "burg" src="images/burger.png">
<h1>Eat-Dat-Burger-Burger</h1>
<div class="row">
<div class= "col-4">
<h2>To be devoured!</h2>
<ul>
  {{#each burgers}}
      {{#unless devoured}}
        {{this.id}}{{this.burger_name}}
        <div>
          <form class="devour-form">
            <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
            <button type="submit" class="btn btn-default">Devour it</button>
          </form>
        </div>
        {{/unless}}
  {{/each}}
</ul>
</div>
<div class= "col-4"></div>
<div class= "col-4">
<h2>Eaten!</h2>
<ul>
  {{#each burgers}}
      {{#if devoured}}
    {{this.id}} {{this.burger_name}}
        {{/if}}
  {{/each}}
</ul>
</div>
</div>

<form  action="/burgers/create" method="POST" class="create-form">

 
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
    <button class = "btn btn-primary create" type="submit">Add Burger</button>

</form>
</div>

